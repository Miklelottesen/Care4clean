<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/case_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_section_caseid_hint"
        android:maxLength="11"
        android:inputType="number"/>
    <EditText android:id="@+id/case_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_section_description_hint"
        android:maxLength="255"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button android:id="@+id/submit_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_section_submit_button"/>
    </LinearLayout>
</LinearLayout>